<!-- Modal -->
<div class="modal fade" id="modalChangePhoto" tabindex="-1" role="dialog" aria-labelledby="modalChangePhotoTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered  modal-dialog-scrollable" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalChangePhotoTitle">Choose a Profil Photo</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="custom-file mb-3">
                    <input type="file" class="custom-file-input" id="file-input">
                    <label class="custom-file-label" for="customFile" data-browse="Browse">Choose file</label>
                </div>

                <div class="cropper-wrapper">
                    <div class="cropper"></div>

                </div>


            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button id="btnUpload" type="button" class="btn btn-primary">Crop &amp; Upload</button>
            </div>
        </div>
    </div>
</div>


@section scripts{
    <script>
        var cropper = null;

        $("#file-input").change(function () {
            readFile(this);
        });

        function readFile(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {  //dosya okuması bittğinde bunu calıstır.
                    if (cropper == null) {//ilk okuma anında null sa croppie yi başlat.
                        cropper = $('.cropper').croppie();
                    }

                    $('.cropper').croppie('bind', {
                        //okunan bir resimse base64 olarak img yer alıyor. bunu croppie e bağla. js olarak dahil edicez.. cropper class lı resmin içinde dahil et.
                        url: e.target.result
                    });
                }

                //bunu base64 olarak oku. secilen dosyaların ilkini. file inputta birden cok secme ozelliği var ya.
                reader.readAsDataURL(input.files[0]);
            }
        }

        //bu adlı modal gizlendiğinde croppie yi yok et. yani foto koymaktan vazgecince.
        $('#modalChangePhoto').on('hidden.bs.modal', function (e) {
            $("#file-input").val(null);
            $(".custom-file-label").text("Choose a file");

            if (cropper) {  //foto secilmeden kapatıldıysa  zAaten null  , olmayan bir şeyi nasıl destroy edeyim. Olan bişey olmalı

                cropper.croppie('destroy');
                cropper = null;
            }
        });

        $("#btnUpload").click(function () {
            cropper.croppie('result', {   //cropper dan result al.
                type: "base64",    //base64 olarak al.
                size: { width: 400, height: 400 }
            }).then(function (base64) {   //alma işi bitince bu function u calıstır
                $("#profilePhoto").attr("src", base64);
                /* $("#result").html(img);*/ //bunu konsola bas.
                //console.log(base64);  //buda base 64 olarak alıyor.
            });

        });

    </script>

}